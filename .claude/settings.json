{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [{ "type": "command", "command": "node .lore/hooks/session-init.js" }]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [{ "type": "command", "command": "node .lore/hooks/prompt-preamble.js" }]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|Glob",
        "hooks": [{ "type": "command", "command": "node .lore/hooks/search-guard.js" }],
        "description": "Remind to use semantic search before speculative reads"
      },
      {
        "matcher": "Edit|Write|Read",
        "hooks": [{ "type": "command", "command": "node .lore/hooks/protect-memory.js" }]
      },
      {
        "matcher": "Write",
        "hooks": [{ "type": "command", "command": "node .lore/hooks/context-path-guide.js" }],
        "description": "Guide writes to docs/context/ or docs/knowledge/"
      },
      {
        "matcher": "Write|Edit",
        "hooks": [{ "type": "command", "command": "node .lore/hooks/convention-guard.js" }],
        "description": "Reinforce conventions based on target file path"
      },
      {
        "matcher": "Write|Edit",
        "hooks": [{ "type": "command", "command": "node .lore/hooks/framework-guard.js" }],
        "description": "Warn when writing to framework-owned or link-generated files"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [{ "type": "command", "command": "node .lore/hooks/knowledge-tracker.js || true" }]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [{ "type": "command", "command": "node .lore/hooks/knowledge-tracker.js || true" }]
      }
    ]
  }
}
