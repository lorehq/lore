{
  "name": "{{name}}",
  "version": "{{version}}",
  "created": "{{created}}"

  // Hook verbosity: "minimal" | "standard" | "discovery"
  //   minimal   — safety hooks only, no per-tool nudges
  //   standard  — all hooks active (nudge at 15, warn at 30)
  //   discovery — lower thresholds (nudge at 5, warn at 10), aggressive capture
